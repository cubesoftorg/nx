{
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "printWidth": 120,
    "overrides": [
        { "files": "*.json", "options": { "tabWidth": 2 } },
        { "files": "*.yml", "options": { "tabWidth": 2 } }
    ],
    "importOrder": ["<THIRD_PARTY_MODULES>", "^@[\\w]+/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
