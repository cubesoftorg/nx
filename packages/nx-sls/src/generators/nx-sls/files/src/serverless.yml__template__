  name: aws
  stage: ${opt:stage, 'test'}
  region: <%= region %>
  runtime: nodejs14.x
  endpointType: regional
  httpApi:
    cors:
      allowedOrigins:
        - '*'
  environment:
    REGION: ${self:provider.region}
    STAGE: ${self:provider.stage}

